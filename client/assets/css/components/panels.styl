.panel
  border: $ui-border
  border-radius: $ui-radius
  
  &:not(:only-child)
    margin-top: $ui-spacing
    
.panel-heading
  border-bottom: $ui-border
  
.panel-heading,
.panel-body
  padding: $ui-spacing-half
  
.panel-body-p0
  padding: 0

.panel-footer
  margin-top: $ui-spacing
